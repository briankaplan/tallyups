# ===========================================
# Tallyups Cloud Deployment Configuration
# ===========================================

# REQUIRED: Gemini API Key (FREE - get from https://aistudio.google.com/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# Authentication (IMPORTANT for cloud deployment!)
# ===========================================
# Set a strong password for web access
AUTH_PASSWORD=your_secure_password_here

# Optional: 4-digit PIN for quick mobile unlock
AUTH_PIN=1234

# Session secret key (auto-generated if not set)
# SECRET_KEY=random_32_char_hex_string

# ===========================================
# Cloudflare R2 Storage (for receipt images)
# ===========================================
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=receipts
R2_PUBLIC_URL=https://your-bucket.r2.dev

# ===========================================
# Database (auto-configured for Railway)
# ===========================================
# DATABASE_PATH=/app/data/receipts.db  # Set by Railway automatically

# ===========================================
# Optional: Google Calendar Integration
# ===========================================
# Run `python setup_calendar.py` locally first, then copy token
# GOOGLE_CALENDAR_TOKEN={"token": "...", "refresh_token": "..."}

# ===========================================
# Optional: Gmail Receipt Scanning
# ===========================================
# GMAIL_TOKENS_DIR=./gmail_tokens

# ===========================================
# Plaid Bank Integration (Live Transactions)
# ===========================================
# Get your credentials at https://dashboard.plaid.com/developers/keys
#
# IMPORTANT: You have PRODUCTION credentials. Use them for real bank data.
# For testing, use SANDBOX credentials.
#
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=production  # Options: sandbox, development, production

# Webhook URL (optional - for real-time transaction updates)
# PLAID_WEBHOOK_URL=https://your-app.com/api/plaid/webhook
# PLAID_WEBHOOK_SECRET=your_webhook_secret

# Sync configuration (optional)
# PLAID_SYNC_INTERVAL=3600       # Sync every hour (seconds)
# PLAID_SYNC_ENABLED=true        # Enable/disable automatic sync
